<Window x:Class="PTR.PTMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/PTR;component/PT64.ico"
        xmlns:loc="clr-namespace:PTR"
        xmlns:models="clr-namespace:PTR.Models"
        xmlns:ctrl="clr-namespace:PTR.Controls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        loc:DialogCloser.DialogClose="{Binding CloseWindowFlag}" 
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" WindowState="Maximized"
        Title="{Binding Title}" >

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <loc:CultureFormatConverter x:Key="CultConv" />

        <Style x:Key="ttStyle" TargetType="ToolTip">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="HasDropShadow" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border BorderThickness="1" CornerRadius="4" BorderBrush="Blue" Padding="2,2,2,2" Background="LemonChiffon">
                            <ContentPresenter>
                                <ContentPresenter.Content>
                                    <TextBlock Width="240">                                      
                                        <Run Text="Project ID:" Foreground="Black"/>
                                        <Run Text="{Binding ID, StringFormat={}{0}}" />
                                        <LineBreak/>
                                        <Run Text="Division:" Foreground="Black"/>
                                        <Run Text="{Binding SalesDivision}"/>
                                        <LineBreak/>
                                        <Run Text="Status:" Foreground="Black"/>
                                        <Run Text="{Binding ProjectStatus}"/>
                                        <LineBreak/>
                                        <Run Text="Type:" Foreground="Black"/>
                                        <Run Text="{Binding ProjectType}"/>
                                        <LineBreak/>
                                        <Run Text="Project:" Foreground="Black"/>
                                        <Run Text="{Binding ProjectName}"/>
                                        <LineBreak/>
                                        <Run Text="Targeted Sales:" Foreground="Black"/>
                                        <Run Text="{Binding EstimatedAnnualSales, StringFormat={}{0:C0}}"/>
                                        <LineBreak/>
                                        <Run Text="Customer:" Foreground="Black"/>
                                        <Run Text="{Binding Customer}"/>
                                        <LineBreak/>
                                        <Run Text="Associate:" Foreground="Black"/>
                                        <Run Text="{Binding Associate}"/>
                                        <LineBreak/>
                                        <Run Text="Expected Date New Sales:" Foreground="Black"/>
                                        <Run Text="{Binding ExpectedDateNewSales, StringFormat={}{0:d MMM yyyy}}"/>
                                        <LineBreak/>
                                        <Run Text="KPM:" Foreground="Black"/>
                                        <Image Source="/PTR;component/Images/award.png" Height="16" Width="20" Margin="2,0,0,0">
                                            <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Hidden"/>                                                        
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KPM}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                    </TextBlock>
                                </ContentPresenter.Content>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <models:HierarchyDataTemplateSelector x:Key="hierarchyDataTemplateSelector" />
        
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True" >
            <Grid DockPanel.Dock="Top" Height="32">
                <Menu HorizontalAlignment="Left" Height="24" Margin="2,2,2,2">
                    <MenuItem Header="File">
                        <MenuItem Header="New Project" x:Name="mnuNewProject" Command="{Binding NewProject}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="Create a new project" 
                                  IsEnabled="{Binding EnableNewProjectBtn}"
                                  Visibility="{Binding ShowNewProject, Converter={StaticResource BoolToVis}}">
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/add.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="S_ave" x:Name="mnuSave" Command="{Binding SaveAll}" ToolTip="Save Changes" 
                              IsEnabled="{Binding EnableSaveBtn}"
                              Visibility="{Binding ShowSave, Converter={StaticResource BoolToVis}}">
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/save.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="C_lose" x:Name="mnuClose" Command="{Binding Shutdown}" ToolTip="Close" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/close.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Edit" Visibility="{Binding ShowAdministrationMnu, Converter={StaticResource BoolToVis}}" ToolTip="Edit Settings" >
                        <MenuItem Header="Customers" x:Name="mnuEditCustomer"
                                  Visibility="{Binding ShowCustomerMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="EditCustomer" 
                                  ToolTip="Add or Edit Customers" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/people.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Countries" x:Name="mnuEditCountry" 
                                  Visibility="{Binding ShowCountryMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="EditCountry" 
                                  ToolTip="Add or Edit Countries" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/AsiaAustralia.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Sales Regions" x:Name="mnuEditSalesRegions" 
                                  Visibility="{Binding ShowSalesRegionMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="SalesRegionView" ToolTip="Add or Edit Sales Regions" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        
                        <MenuItem Header="Users" x:Name="mnuEditAssociate" 
                                  Visibility="{Binding ShowUserMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="EditUser" 
                                  ToolTip="Add or Edit Associates and Access Permissions" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/users.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Exchange Rates" x:Name="mnuEditExchangeRates" 
                                  Visibility="{Binding ShowExchangeRateMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="ExchangeRateView" ToolTip="Add or Edit Exchange Rates" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/dollar.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        
                    </MenuItem>

                    <MenuItem Header="Reports" Visibility="{Binding ShowReportsMnu, Converter={StaticResource BoolToVis}}" ToolTip="Reports" >
                        <MenuItem Header="Sales Pipeline Report" x:Name="mnuAnnualReport" 
                                  Visibility="{Binding ShowSalesPipelineMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="SalesFunnelReport" 
                                  ToolTip="Generate Sales Funnel Summary Report" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/heatmapinv.png" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Status Report" x:Name="mnuStatusReport" 
                                  Visibility="{Binding ShowStatusMnu, Converter={StaticResource BoolToVis}}"
                                  Command="{Binding OpenDialog}" CommandParameter="StatusReport" 
                                  ToolTip="Generate Status Report" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/statuses.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Project List" x:Name="mnuProjectReport" 
                                  Visibility="{Binding ShowProjectListMnu, Converter={StaticResource BoolToVis}}"
                                  Command="{Binding OpenDialog}" CommandParameter="ProjectReport" 
                                  ToolTip="Generate Project Report" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/table.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Evaluation Plans" x:Name="mnuEVPlans" 
                                  Visibility="{Binding ShowEvaluationPlansMnu, Converter={StaticResource BoolToVis}}"
                                  Command="{Binding OpenDialog}" CommandParameter="EvaluationPlans" 
                                  ToolTip="Review Evaluations Plans" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/table.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="Projects" Visibility="{Binding ShowProjectsMnu, Converter={StaticResource BoolToVis}}" ToolTip="Project Maintenance" >
                        <MenuItem Header="Project Master View"  
                                  Visibility="{Binding ShowProjectMasterListMnu, Converter={StaticResource BoolToVis}}" 
                                  Command="{Binding OpenDialog}" CommandParameter="ProjectMasterReport" 
                              ToolTip="Projects Master List" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/report.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Maintenance" x:Name="mnuMaintenanceDue" 
                                  Visibility="{Binding ShowProjectMaintenanceMnu, Converter={StaticResource BoolToVis}}"  
                                  Command="{Binding OpenDialog}" CommandParameter="MaintenanceDue" ToolTip="Project Maintenance" >
                            <MenuItem.Icon>
                                <Image Source="/PTR;component/Images/Tools.ico" Height="16" Width="20" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="About" Command="{Binding OpenDialog}" CommandParameter="AboutView" ToolTip="About this program"  />
                </Menu>
            </Grid>

            <Grid DockPanel.Dock="Bottom" Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="2" Content="Close" Command="{Binding CloseDown}" Margin="0,0,10,0" Width="50" Style="{StaticResource filterButtonStyle}" HorizontalAlignment="Right" ToolTip="Save changes and Close program"/>
                <Button Grid.Column="0" x:Name="btnExcel" Width="200" Visibility="{Binding ExportIsEnabled, Converter={StaticResource BoolToVis}}" Command="{Binding ExportToExcel}" Margin="10,0,0,0"  Style="{StaticResource filterButtonStyle}" HorizontalAlignment="Left" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" ToolTip="Export Selected Project to Excel" VerticalAlignment="Center">
                            <Image Source="/PTR;component/Images/export.ico"  Height="16" Width="20"/>
                            <TextBlock Text="Export Selected Project" FontSize="12" Height="24" Width="150" />
                        </StackPanel>
                    </Button.Content>
                </Button>
               
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" HorizontalAlignment="Left" Width="202" Margin="4,4,2,4" 
                         BorderBrush="Gray" BorderThickness="1" CornerRadius="2" IsEnabled="{Binding EnableFilters}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Style="{StaticResource stkpanel}" Margin="8,0,0,0">
                            <Button x:Name="btnApplyFilter" Command="{Binding ApplyFilter}" Margin="6,0" Content="Apply Filters" Width="80" Style="{StaticResource filterButtonStyle}" />
                            <Button x:Name="btnClearFilters" Command="{Binding ClearFilter}" Margin="2,0" Content="Clear Filters" Width="80" Style="{StaticResource filterButtonStyle}" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Margin="6,0,0,0" Background="WhiteSmoke">
                                <loc:FilterListControl x:Name="flCountries" Width="170" TTip="These are the countries that you have been given access to"
							        ListItems="{Binding Countries}" 
							        SelectedItems="{Binding CountriesSrchString}" 
							        Margin="4,4,0,0" 
							        ShowAll="{Binding ShowAllCountries}"
                                    VisibleCount="8"
							        Heading="Current User's Countries" 
							        ToggleButtonVisibility="Visible"
							        HorizontalAlignment="Left"                                  
                                    SelectAll="{Binding AllCountries}"
                                    SelectAllButtonCommand="{Binding AllCountriesCommand}"
                                    ExpandButtonCommand ="{Binding ExpandCountriesCommand}"/>

                                <loc:RadioListControl x:Name="radSalesDivs" Width="150" TTip="These are the sales divisions that you have been given access to"
                                    ListItems ="{Binding SalesDivisionRadios}" 
							        SelectedItemID ="{Binding SelectedDivisionID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}" 
							        Margin="4,0,4,0" 							                                      
							        Heading="Sales Division" 							    
							        HorizontalAlignment="Left" />

                                <loc:FilterListControl x:Name="flProjectStatuses" Width="150"
							        ListItems="{Binding ProjectStatusTypes}" 
							        SelectedItems="{Binding ProjectStatusTypesSrchString}" 
							        Margin="4,0,0,0" 
							        ShowAll="True"                                
							        Heading="Project Statuses" 
							        ToggleButtonVisibility="Collapsed"
							        HorizontalAlignment="Left" 
                                    SelectAll="{Binding AllProjectStatuses}"
                                    SelectAllButtonCommand="{Binding AllProjectStatusTypesCommand}" />

                                <loc:FilterListControl x:Name="flProjectTypes" Width="150"
							        ListItems="{Binding ProjectTypes}" 
							        SelectedItems="{Binding ProjectTypesSrchString}" 
							        Margin="4,0,0,0" 
							        ShowAll="True"                                
							        Heading="Project Types" 
							        ToggleButtonVisibility="Collapsed"
							        HorizontalAlignment="Left" 
                                    SelectAll="{Binding AllProjectTypes}"
                                    SelectAllButtonCommand="{Binding AllProjectTypesCommand}" />

                                <loc:FilterListControl x:Name="flAssociates" Width="170" 
							        ListItems="{Binding Associates}" 
							        SelectedItems="{Binding AssociatesSrchString}" 
							        Margin="4,0,0,0" 							                                     
							        Heading="Associates" 
							        ToggleButtonVisibility="Visible"
                                    ShowAll="{Binding ShowAllAssociates}"
                                    VisibleCount="12"
							        HorizontalAlignment="Left" 
							        SelectAll="{Binding AllAssociates}"                                                                                               
							        ExpandButtonCommand ="{Binding ExpandAssociateButtonCommand}"
                                    SelectAllButtonCommand="{Binding AllAssociatesCommand}" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Grid.Column="1" x:Name="databorder" Margin="2,4,2,4" BorderBrush="Gray" BorderThickness="1" CornerRadius="2"  HorizontalAlignment="Left"   >
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Row="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                                                       
                            <DataGrid Grid.Row="0" x:Name="ProjectList"     
                                Background="White"                                                               
                                AutoGenerateColumns="False"   
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                HorizontalScrollBarVisibility="Auto"
						        VerticalScrollBarVisibility="Auto" 
                                ItemsSource="{Binding AssociatesProjects, IsAsync=True, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" FrozenColumnCount="1" 
                                loc:MouseDoubleClick.Command="{Binding OpenProject}" 
                                loc:MouseDoubleClick.CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"                             
                                BorderBrush="Gray"
                                AllowDrop="False"                                                          
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="False"    
                                SelectionMode="Single"
                                SelectionUnit="FullRow"
                                SelectedItem="{Binding SelectedProject}"
                                IsEnabled="{Binding EnableProjectList}">
                                <DataGrid.Resources>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="LightCyan" />
                                                <Setter Property="Foreground" Value="Blue"/>
                                                <Setter Property="FontWeight" Value="DemiBold" />
                                            </Trigger>
                                        </Style.Triggers>
                                        <Style.Setters>
                                            <Setter Property="Background" Value="{Binding Colour}"/>
                                            <Setter Property="ToolTip">
                                                <Setter.Value>
                                                    <ToolTip Style="{StaticResource ttStyle}" Content="{Binding }" Background="LemonChiffon"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style.Setters>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="70" x:Name="ID" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Project ID"  />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ID, Mode=OneTime}" Height="24" Padding="0,3,0,0" VerticalAlignment="Center" TextAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="70" x:Name="Division" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Division" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SalesDivision, Mode=OneTime}" Height="24" Padding="2,3,0,0" TextAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="75" x:Name="ProjectStatus" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Status" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ProjectStatus, Mode=OneTime}" Padding="2,3,0,0" Height="24" TextAlignment="Left" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="85" x:Name="ProjectType" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Type" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ProjectType, Mode=OneTime}" Padding="2,3,0,0" Height="24" TextAlignment="Left" />
                                                    <Image Source="/PTR;component/Images/award.png" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                                <Setter Property="ToolTip" Value="KPM"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding KPM}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="170" x:Name="ProjectName" KeyboardNavigation.IsTabStop="False"  HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Name" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ProjectName, Mode=OneTime}" Height="24" Padding="2,3,0,0" TextAlignment="Left"  />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="100" x:Name="TargetedSales" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Targeted Sales" ToolTip="Targeted Sales (local currency) for 12 months" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock  Padding="0,3,2,0"  Height="24" TextAlignment="Right" >
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource CultConv}">
                                                            <Binding Mode="TwoWay" Path="EstimatedAnnualSales" />
                                                            <Binding Mode="OneWay" Path="CultureCode" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="170" x:Name="Customer" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Customer" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Customer, Mode=OneTime}" Height="24" Padding="2,3,0,0" TextAlignment="Left" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="120" x:Name="Associate" KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Associate" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Associate, Mode=OneTime}" Height="24" Padding="2,3,0,0" TextAlignment="Left" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="120"  KeyboardNavigation.IsTabStop="False" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Actions" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="ToolTip" Value="Overdue Monthly Activity"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding OverdueActivity}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="ToolTip" Value="Completion Required"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RequiringCompletion}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="ToolTip" Value="Incomplete Evaluation Plan"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IncompleteEP}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="ToolTip" Value="Evaluation Plan Required"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding EPRequired}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <Image Source="/PTR;component/Images/compass.ico" Height="16" Width="20" Margin="2,0,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="ToolTip" Value="Milestone Due"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding MilestoneDue}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

